#/bin/bash
apt-get update
dpkg -i /tmp/powerdevs_i386.deb
dpkg -i /tmp/linux*
yes | apt-get install -f
cd /usr/src
ln -s linux linux-headers-2.6.32.11+drm33.2
tar xvjf /tmp/rtai-3.8.1.tar.bz2
ln -s rtai-3.8.1 rtai
cd rtai
cp /tmp/.rtai_config .
cp /tmp/rtai_config.h .
yes "" | make config
make install
